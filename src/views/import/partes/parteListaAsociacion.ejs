<div class=" container modal-dialog modal-content color text-center col-md-4 mb-3">
<h1> Tabla Asociaciones</h1>
</div>

<div class=" container center modal-dialog col-md-6 mb-3">
<% if (message.length > 0) { %>
  <div class="alert alert-danger">
	<%= message %>
  </div>
<% } %>
</div>

<div class=" container modal-content  color centrade">
	<div class="row">
	<table id="table" class="fixed table table-striped table-bordered table-dark" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>nodo de salida</th>
                <th>nodo de llegada</th>
                <th>relacion</th>
                <th>capacidad</th>
				<% if (user.supervisor == false) { %>
				<th>editar</th>
				<th>eliminar</th>
				<% } %>
            </tr>
        </thead>
        <tbody>
            <% for(i=0; i < asociaciones.length; i++){ %>
                <tr>
                    <th ><%= asociaciones[i].id %></th>
                    <th ><%= asociaciones[i].nombre_nodo1 %></th>
                    <th ><%= asociaciones[i].nombre_nodo2 %></th>
                    <th ><%= asociaciones[i].tipo_nodo1 %> -> <%= asociaciones[i].tipo_nodo2 %> </th>
                    <th ><%= asociaciones[i].capacidad %> KW</th>
					<% if (user.supervisor == false) { %>
						<th>
						<form class="" action="/asociaciones/editar" method="get">
							<input type="" class="invisible esconde" name="asociacionid" id="asociacionid"
		                          value="<%= asociaciones[i].id %>">
							<input type="submit" value= "editar" class=" btn btn-success">
							</form>
						</th>
                    	<th>
						<form class="" action="/asociaciones/eliminar" method="post">
							<input type="" class="invisible esconde" name="asociacionid" id="asociacionid"
	                        	value="<%= asociaciones[i].id %>">
							<input type="submit" value= "eliminar" class=" btn btn-danger">
						</form>
						</th>
					<% } %>
            	</tr>
            <% } %>
		</tbody>
    </table>
	</div>
</div>
