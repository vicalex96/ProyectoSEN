<div class=" container modal-dialog modal-content color text-center col-md-4 mb-3">
<h1> Tabla nodos</h1>
</div>

<div class=" container center modal-dialog col-md-6 mb-3">
<% if (message.length > 0) { %>
  <div class="alert alert-danger">
	<%= message %>
  </div>
<% } %>
</div>

<div class=" container modal-content  color centrade">
	<div class="row">
	<table id="table" class="fixed table table-striped table-bordered table-dark" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>nombre</th>
                <th>latitud</th>
                <th>longitud</th>
                <th>tipo de nodo</th>
				<% if (user.supervisor == false) { %>
                <th>editar</th>
                <th>eliminar</th>
				<% } %>
            </tr>
        </thead>
        <tbody>
			<% for(i=0; i < nodos.length; i++){ %>
                <tr>
                    <th ><%= nodos[i].id %></th>
                    <th ><%= nodos[i].nombre %></th>
                    <th ><%= nodos[i].latitud %></th>
                    <th ><%= nodos[i].longitud %></th>
                    <th ><%= nodos[i].tipo_nodo %></th>
					<% if (user.supervisor == false) { %>
                    	<th>
						<form class="" action="/nodos/editar" method="get">
							<input type="" class="invisible esconde" name="nombreNodo" id="nombreNodo"
		                          value="<%= nodos[i].nombre %>">
							<input type="submit" value= "editar" class=" btn btn-success">
							</form>
						</th>
                    	<th>
						<form class="" action="/nodos/eliminar" method="post">
							<input type="" class="invisible esconde" name="nombreNodo" id="nombreNodo"
	                          value="<%= nodos[i].nombre %>">
							  <input type="submit" value= "eliminar" class=" btn btn-danger">
							</form>
						</th>
					<% } %>
                </tr>
            <% } %>
		</tbody>
    </table>
	</div>
</div>
